@model InterviewTask.Web.ViewModels.User.UserDetailsViewModel

@{
    ViewData["Title"] = "Home Page";
}
@if (!this.User.Identity.IsAuthenticated)
{
    <main class="mt-3 mb-3">
        <form method="get" class="form border-primary-4 rounded p-3 w-70 mx-auto mt-3">

            <div id="product-data-holder" class="form-group mx-auto text-center col-md-5 my-3 border-t">
                <hr>
                <div class="nav-item active mt-2 mb-1">
                    <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </div>
              <br/>
                <p>OR</p>
                <br/>
                <div class="nav-item active mt-1 mb-2">
                    <a class="btn btn-outline-success" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </div>
                <hr>
            </div>
        </form>
    </main>
}
