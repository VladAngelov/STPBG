@using Microsoft.AspNetCore.Identity
@inject SignInManager<InterviewTask.Data.Models.User.InterviewTaskUser> SignInManager
@inject UserManager<InterviewTask.Data.Models.User.InterviewTaskUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark">Hello @User.Identity.Name! | </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/Company/Create">Create new Company | </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contacts">Contacts | </a>
            </li>
            <li class="nav-item">
                <form class="form-inline"
                      asp-area="Identity"
                      asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout |</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contacts">Contacts</a>
            </li>
        }
    </ul>
