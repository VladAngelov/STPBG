@model List<InterviewTask.Web.ViewModels.Company.CompanyViewModel>

@{
    ViewData["Title"] = "Companies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form border-primary-4 rounded p-3 w-70 mx-auto mt-3">
    <h1 class="bg-dark text-white font-weight-bold text-center mx-auto rounded">Companies</h1>
    @if (Model.Count == 0 || Model == null)
    {
        <h5>No Companies</h5>
    }
    else
    {
        @foreach (var company in Model)
        {
            <div class="col-md-4 border-bot mt-2">
                <h6>
                    User: @company.User.FullName
                </h6>
                <h6>
                    Name of the company: @company.Name
                </h6>
                <h6>
                    Address: @company.Address
                </h6>
                <h6>
                    Count of the offices: @company.Offices.Count
                </h6>

                <div class="form-group mt-4">
                    <a href="/Office/Offices/@company.Id" class="btn btn-outline-secondary">Offices</a>
                    <a href="/Company/Edit/@company.Id" class="btn btn-outline-warning">Edit</a>
                    <a href="/Company/Delete/@company.Id" class="btn btn-outline-danger">Delete</a>
                    <a href="/" class="btn btn-outline-primary">Back</a>
                </div>
                <hr>
            </div>
        }
    }
</form>