@model InterviewTask.Web.BindingModels.Office.OfficeBindingModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit office";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="bg-dark text-white font-weight-bold text-center p-3 w-60 mx-auto rounded">Edit the office</h3>

<form method="post" class="form border-primary-4 rounded p-3 w-60 mx-auto mt-3" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>

    <div id="name-and-price-holder" class="d-flex justify-content-between">
        <div class="form-group mx-auto w-45">

            <div class="d-flex justify-content-center">
                <label asp-for="Country" class="text-dark h5"></label>
            </div>
            <input type="text"
                   class="form-control text-primary text-center"
                   placeholder="Name of the company..."
                   value="@Model.Country"
                   asp-for="Country">
            <span asp-validation-for="Country" class="text-danger"></span>

            <div class="d-flex justify-content-center mt-2">
                <label asp-for="City" class="text-dark h5"></label>
            </div>
            <input type="text"
                   class="form-control text-primary text-center"
                   placeholder="Brand..."
                   value="@Model.City"
                   asp-for="City">
            <span asp-validation-for="City" class="text-danger"></span>

            <div class="d-flex justify-content-center">
                <label asp-for="Street" class="text-dark h5"></label>
            </div>
            <input type="text"
                   class="form-control text-primary text-center"
                   placeholder="Street of the office..."
                   value="@Model.Street"
                   asp-for="Street">
            <span asp-validation-for="Street" class="text-danger"></span>

            <div class="d-flex justify-content-center">
                <label asp-for="StreetNumber" class="text-dark h5"></label>
            </div>
            <input type="text"
                   class="form-control text-primary text-center"
                   placeholder="Number of the street..."
                   value="@Model.StreetNumber"
                   asp-for="StreetNumber">
            <span asp-validation-for="StreetNumber" class="text-danger"></span>

            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="Headquarters" class="text-dark h5 mr-5"></label>
                    <input checked="checked"
                           id="Headquarters"
                           name="Headquarters"
                           type="checkbox" />
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="d-flex justify-content-center border-t mt-3">
        <button class="btn btn-outline-warning mt-3 font-weight-bold mr-2">Edit the office</button>
        <a href="/" class="btn btn-outline-primary mt-3 font-weight-bold">Back</a>
    </div>
    <hr />
</form>