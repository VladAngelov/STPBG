@model List<InterviewTask.Web.ViewModels.Office.OfficeViewModel>

<form class="form border-primary-4 rounded p-3 w-70 mx-auto mt-3">
    <h1 class="bg-dark text-white font-weight-bold text-center mx-auto rounded">Offices</h1>
    @if (Model.Count == 0 || Model == null)
    {
        <h5>No Offices</h5>
    }
    else
    {
        @foreach (var office in Model)
        {
            if (office == null)
            {
                <h5>No Offices</h5>
            }
            <div class="col-md-4 border-bot mt-2">
                <h6>
                    Name of the company: @office.Company.Name
                </h6>
                <h6>
                    Address: @office.Country, @office.City, @office.Street, &numero;@office.StreetNumber
                </h6>
                <h6>
                    Count of the employees: @office.Employees.Count
                </h6>

                <div class="form-group mt-4">
                    <a href="/Employee/Employees/@office.Id" class="btn btn-outline-secondary">Employees</a>
                    <a href="/Office/Edit/@office.Id" class="btn btn-outline-warning">Edit</a>
                    <a href="/Office/Delete/@office.Id" class="btn btn-outline-danger">Delete</a>
                    <a href="/" class="btn btn-outline-primary mt-1">Back</a>
                </div>
                <hr>
            </div>
        }
    }
</form>