@model InterviewTask.Web.ViewModels.Office.OfficeViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Office's details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form border-primary-4 rounded p-3 w-70 mx-auto mt-3">
    <h1 class="bg-dark text-white font-weight-bold text-center mx-auto rounded">Office's details</h1>

    @if (Model == null)
    {
        <h5>No Offices</h5>
    }
    else
    {
        <div class="col-md-4 border-bot mt-2">
            <h6>
                Name of the company: @Model.Company.Name
            </h6>
            <h6>
                Address: @Model.Country, @Model.City, @Model.Street, &numero;@Model.StreetNumber
            </h6>
            <h6>
                Count of the employees: @Model.Employees.Count
            </h6>

            <div class="form-group mt-4">
                <a href="/Employee/Employees/@Model.Id" class="btn btn-outline-secondary">All employees in the office</a>
                <a href="/Employee/Create/@Model.Id" class="btn btn-outline-secondary">Add a new employee</a>
                <a href="/" class="btn btn-outline-primary">Back</a>
            </div>
            <hr>
        </div>
    }
</form>